@model string

<h2>Buscar Traducción</h2>

@using (Html.BeginForm("Buscar", "Traductor", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Palabra a buscar:")
        @Html.TextBox("palabra", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Idioma:")
        <div class="radio">
            <label>
                @Html.RadioButton("idioma", "ingles", true)
                Inglés
            </label>
        </div>
        <div class="radio">
            <label>
                @Html.RadioButton("idioma", "espanol")
                Español
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
}

@if (!string.IsNullOrEmpty(ViewBag.Traduccion))
{
    <div class="alert alert-success">@ViewBag.Traduccion</div>
}
else if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-danger">@ViewBag.Mensaje</div>
}
